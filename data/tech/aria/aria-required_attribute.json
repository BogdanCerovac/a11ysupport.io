{
  "id": "aria-required_attribute",
  "title": "aria-required attribute",
  "type": "attribute",
  "description": "Indicates that user input is required on the element before a form may be submitted.",
  "references": [
    {
      "title": "ARIA spec for aria-required",
      "url": "https://www.w3.org/TR/wai-aria-1.1/#aria-required"
    }
  ],
  "assertions": [
    {
      "id": "convey_value_false",
      "title": "The screen reader MUST convey the \"false\" value",
      "type": "MUST",
      "css_target": "*[ara-required=\"false\"]",
      "preconditions": [],
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    },
    {
      "id": "convey_value_true",
      "title": "The screen reader MUST convey the \"true\" value",
      "type": "MUST",
      "css_target": "*[ara-required=\"true\"]",
      "preconditions": [],
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    }
  ],
  "date_updated": "2019-01-06"
}
