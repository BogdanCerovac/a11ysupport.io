{
  "$id": "http://accessibilitysupported.com/dev-test.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "at_version": {
      "type": "object",
      "properties": {
        "browsers": {
          "type": "object",
          "properties": {
            "chrome": {
              "$ref": "#/definitions/browser_version"
            },
            "and_chr": {
              "$ref": "#/definitions/browser_version"
            },
            "edge": {
              "$ref": "#/definitions/browser_version"
            },
            "firefox": {
              "$ref": "#/definitions/browser_version"
            },
            "and_ff": {
              "$ref": "#/definitions/browser_version"
            },
            "ie": {
              "$ref": "#/definitions/browser_version"
            },
            "ios_saf": {
              "$ref": "#/definitions/browser_version"
            },
            "safari": {
              "$ref": "#/definitions/browser_version"
            }
          }
        }
      },
      "required": ["browsers"]
    },
    "browser_version": {
      "type": "object",
      "properties": {
        "at_version": {
          "type": "string"
        },
        "browser_version": {
          "type": "string"
        },
        "os_version": {
          "type": "string",
          "description": "The OS version indicates what accessibility APIs are in use"
        },
        "date": {
          "description": "The date is required to help us determine which support points have priority for testing.",
          "type": "string",
          "format": "date"
        }
      },
      "required": ["at_version", "browser_version", "os_version", "date"]
    },
    "at": {
      "type": "object",
      "properties": {
        "browsers": {
          "type": "object",
          "properties": {
            "chrome": {
              "$ref": "#/definitions/browser"
            },
            "and_chr": {
              "$ref": "#/definitions/browser"
            },
            "edge": {
              "$ref": "#/definitions/browser"
            },
            "firefox": {
              "$ref": "#/definitions/browser"
            },
            "and_ff": {
              "$ref": "#/definitions/browser"
            },
            "ie": {
              "$ref": "#/definitions/browser"
            },
            "ios_saf": {
              "$ref": "#/definitions/browser"
            },
            "safari": {
              "$ref": "#/definitions/browser"
            }
          }
        }
      },
      "required": ["browsers"]
    },
    "browser": {
      "type": "object",
      "properties": {
        "support": {
          "description": "Is the combination supported? y=yes, p=partial, n=no, na=not-applicable. If partial, please provide extra documentation as to why.",
          "type": "string",
          "enum": ["y", "p", "n", "na", "u"]
        },
        "output": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "command": {
                "description": "The id of the keyboard command. It MUST be a property name in the relevant ATBrowsers.results[at].commands object",
                "type": "string"
              },
              "from": {
                "type": "string",
                "enum": ["before target", "after target", "target", "within target", "start of target", "end of target", "na"],
                "description": "Describes the focus/cursor destination before the command."
              },
              "to": {
                "type": "string",
                "enum": ["target", "start of target", "end of target", "past target", "before target", "within target", "after target", "na"],
                "description": "Describes the focus/cursor destination after the command."
              },
              "output": {
                "type": "string"
              },
              "result": {
                "type": "string",
                "enum": ["pass", "fail", "partial", "unknown", "na"]
              },
              "behind_setting": {
                "type": "string",
                "description": "If support is hidden behind a non-default setting, describe that setting here."
              }
            },
            "required": ["command", "result"]
          }
        },
        "notes": {
          "description": "Any relevant notes. This can be in markdown format.",
          "type": "string"
        }
      },
      "required": ["output"]
    },
    "assertion": {
      "type": "object",
      "properties": {
        "feature_id": {
          "type": "string"
        },
        "feature_assertion_id": {
          "type": "string"
        },
        "css_target": {
          "type": "string",
          "description": "A css selector that determines which elements in the example need to be tested."
        },
        "expected_value": {
          "type": "string",
          "description": "an example of expected output; does not need to be exact. This can be helpful especially for things like computed accessible names and descriptions."
        },
        "results": {
          "type": "object",
          "properties": {
            "jaws": {
              "$ref": "#/definitions/at"
            },
            "nvda": {
              "$ref": "#/definitions/at"
            },
            "vo_ios": {
              "$ref": "#/definitions/at"
            },
            "vo_macos": {
              "$ref": "#/definitions/at"
            },
            "narrator": {
              "$ref": "#/definitions/at"
            },
            "android": {
              "$ref": "#/definitions/at"
            },
            "dragon_win": {
              "$ref": "#/definitions/at"
            }
          }
        }
      },
      "required": ["feature_id", "feature_assertion_id", "results"]
    },
    "history": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date"
        },
        "message": {
          "type": "string"
        }
      },
      "required": ["date", "message"]
    }
  },
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "keywords": {
      "description": "Key words that are used to help find features in a search",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "html_file": {
      "type": "string",
      "description": "path relative to the /data/tests/html directory. References the file that contains the test html."
    },
    "versions": {
      "type": "object",
      "properties": {
        "jaws": {
          "$ref": "#/definitions/at_version"
        },
        "nvda": {
          "$ref": "#/definitions/at_version"
        },
        "vo_ios": {
          "$ref": "#/definitions/at_version"
        },
        "vo_macos": {
          "$ref": "#/definitions/at_version"
        },
        "narrator": {
          "$ref": "#/definitions/at_version"
        },
        "android": {
          "$ref": "#/definitions/at_version"
        },
        "dragon_win": {
          "$ref": "#/definitions/at_version"
        }
      }
    },
    "assertions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/assertion"
      }
    },
    "history": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/history"
      }
    }
  },
  "required": [
    "title",
    "description",
    "history",
    "versions",
    "assertions"
  ]
}
