{
  "$id": "http://accessibilitysupported.com/dev-feature.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "url": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": ["title", "url"]
    }
  },
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "title": "The Description"
    },
    "related_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "#/definitions/url"
      }
    },
    "keywords": {
      "description": "Key words that are used to help find features in a search",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "recommendation": {
      "type": "string"
    },
    "date_updated": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [
    "title", "description", "date_updated"
  ]
}
