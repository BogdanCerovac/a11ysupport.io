      "feature_assertion_id": "convey_value_undefined",
      "results": {
        "jaws": {
          "browsers": {
            "chrome": {
              "output": [
                {
                  "command": "next_focusable_item",
                  "from": "before target",
                  "to": "target",
                  "output": "\"Grid, date, column 1, row 2, 2018-01-01, selected\"",
                  "result": "fail"
                }
              ]
            },
            "ie": {
              "output": [
                {
                  "command": "next_focusable_item",
                  "from": "before target",
                  "to": "target",
                  "output": "\"column 0, row 1, 2018-01-01\"",
                  "result": "unknown"
